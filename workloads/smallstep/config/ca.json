{
  "address": ":9000",
  "dnsNames": ["phxc-ca.smallstep.svc.cluster.local", "127.0.0.1"],
  "logger": {
    "format": "text"
  },
  "db": {
    "type": "badgerv2",
    "dataSource": "/home/step/db"
  },
  "root": "/home/step/certs/root_ca.crt",
  "crt": "/home/step/certs/intermediate_ca.crt",
  "key": "/home/step/secrets/intermediate_ca_key",
  "ssh": {
    "hostKey": "/home/step/secrets/intermediate_ca_key",
    "userKey": "/home/step/secrets/intermediate_ca_key"
  },
  "authority": {
    "provisioners": [
      {
        "type": "JWK",
        "name": "step-issuer",
        "claims": {
          "enableSSHCA": false,
          "disableRenewal": false
        },
        "options": {
          "x509": {
            "allow": {
              "dns": "*.local"
            },
            "allowWildcardNames": false
          }
        }
      },
      {
        "type": "JWK",
        "name": "ssh-host",
        "claims": {
          "minHostSSHCertDuration": "72h",
          "maxHostSSHCertDuration": "72h",
          "defaultHostSSHCertDuration": "72h",
          "enableSSHCA": true,
          "disableRenewal": false,
          "allowRenewalAfterExpiry": true
        },
        "options": {
          "ssh": {
            "host": {
              "allow": {
                "dns": ["*.local"]
              }
            }
          }
        }
      }
    ]
  },
  "tls": {
    "cipherSuites": [
      "TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305_SHA256",
      "TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256"
    ],
    "minVersion": 1.2,
    "maxVersion": 1.3,
    "renegotiation": false
  }
}
