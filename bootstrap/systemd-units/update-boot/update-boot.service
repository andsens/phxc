[Unit]
Description=Update the boot partition with the latest image
Requires=boot.mount workload-ready@bootstrap.service trust-phxc-root.service
After=boot.mount workload-ready@bootstrap.service uncordon.service switch-boot.service trust-phxc-root.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
ExecStart=update-boot update
