[Unit]
Description=Update the efi partition with the latest image and reboot into it
RequiresMountsFor=/efi
Requires=workload-ready@image-registry.service workload-ready@bootstrap.service upload-recovery-key.service
After=workload-ready@image-registry.service workload-ready@bootstrap.service uncordon.service switch-boot.service upload-recovery-key.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
ExecStart=update-boot -r
